{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"removeComments": false,
		"noImplicitAny": false,
		"suppressImplicitAnyIndexErrors": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"strict": true,
		"outDir": "dist"
	},
	"exclude": ["node_modules"]
}
